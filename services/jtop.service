[Unit]
Description=jtop service
After=multi-user.target

[Service]
# Type=exec
Environment="JTOP_SERVICE=True"
ExecStart=/usr/local/bin/jtop --force
Restart=on-failure
RestartSec=10s
TimeoutStartSec=30s
TimeoutStopSec=30s

[Install]
WantedBy=multi-user.target
